rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /messages/{messageId} {
      allow read, update: if resource != null && request.auth != null &&
        (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.recipientId);
      
      allow create: if request.auth != null;

      allow delete: if resource != null && request.auth != null && request.auth.uid == resource.data.senderId;
    }
  }
}